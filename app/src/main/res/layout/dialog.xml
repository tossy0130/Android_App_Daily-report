<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/alertdialog_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <!-- タイトルテキストビュー
    <TextView
        android:id="@+id/dia_01_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#03DAC5"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    -->

    <!-- スピナー -->
    <Spinner
        android:id="@+id/dia_spinner_01"
        android:entries="@array/list"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:textAlignment="center"
        android:background="@android:color/holo_blue_light"
        android:paddingRight="10dp"
        android:paddingVertical="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        />

    <!-- スピナー　受け取り　TextView -->
    <EditText
        android:id="@+id/dia_edit_01"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/dia_spinner_01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <CheckBox
        android:id="@+id/dia_chack_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dia_edit_01"
        android:text="終日"
        android:layout_marginTop="20dp"
        android:layout_marginRight="120dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>